builddir = $root/build
tools = $root/tools
python = PYTHONPATH=$root python
rule configure
    command = $python $root/tools/build.py
    generator = 1
build $root/build.ninja: configure $root/build.toml $root/pages/build.toml $root/tools/repo.py $root/tools/build.py $root/tools/index.py $root/tools/model.py $root/tools/ninja.py
